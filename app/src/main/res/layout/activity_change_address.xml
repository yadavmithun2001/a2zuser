<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context=".ChangeAddress">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="100dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/a2z" />
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Request for change address"
                android:textSize="22dp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:layout_marginStart="20dp" />


            <EditText
                android:id="@+id/houseno"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_text"
                android:hint="House Number"
                android:inputType="text"
                android:fontFamily="@font/poppins"
                android:paddingStart="20dp"
                android:layout_marginTop="40dp"
                android:gravity="center_vertical"/>
            <EditText
                android:id="@+id/floorno"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_text"
                android:hint="Floor Number"
                android:inputType="number"
                android:fontFamily="@font/poppins"
                android:paddingStart="20dp"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"/>
            <EditText
                android:id="@+id/streetno"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_text"
                android:hint="Add Street Number"
                android:inputType="text"
                android:fontFamily="@font/poppins"
                android:paddingStart="20dp"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"/>
            <EditText
                android:id="@+id/wardno"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_text"
                android:hint="Ward Number"
                android:inputType="number"
                android:fontFamily="@font/poppins"
                android:paddingStart="20dp"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"/>
            <EditText
                android:id="@+id/editrouteno"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_text"
                android:hint="Add Route Number"
                android:inputType="number"
                android:fontFamily="@font/poppins"
                android:paddingStart="20dp"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"/>
            <EditText
                android:id="@+id/editpincode"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_text"
                android:hint="Pin Code"
                android:inputType="number"
                android:fontFamily="@font/poppins"
                android:paddingStart="20dp"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"/>


            <androidx.cardview.widget.CardView
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/pColor"
                android:elevation="10dp"
                app:cardCornerRadius="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="50dp"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                tools:layout_editor_absoluteX="30dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text="Send Request"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/ltprogress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#51000000"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>




</RelativeLayout>